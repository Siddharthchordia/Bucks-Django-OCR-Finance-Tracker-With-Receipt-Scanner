# Environment Variables for Bucks Finance Tracker
# Copy this file to .env and update with your values

# Django Settings
# IMPORTANT: Generate a new SECRET_KEY for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
